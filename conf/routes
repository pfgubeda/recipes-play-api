# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Recurso:
#   - user: representa a un único usuario del sistema
#   - users: recurso colección que representa a la totalidad de recursos tipo user

# Operaciones: Crear usuario, editar, borrar...


# Crear usuario
# Ejemplo de URL: http://host/user/pepe/10
# POST    /users           controllers.UserController.create(req: Request)

# Obtener un usuario
# GET     /user/:id       controllers.UserController.retrieve(req: Request, id: Integer)

# Actualizar usuario
# PUT     /user/:id       controllers.UserController.update(req: Request, id: Integer)

# Borrar usuario
# DELETE     /user/:id       controllers.UserController.delete(req: Request, id: Integer)

# Listar todos los usuarios
# GET     /users       controllers.UserController.retrieveAll(req: Request)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


#RECETAS
# Add recipe
POST    /recipes           controllers.RecipeController.create(req: Request)

# Get all recipes
GET     /recipes       controllers.RecipeController.retrieveAll(req: Request)